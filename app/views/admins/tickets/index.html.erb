<div class="container">
	<div class="row">
		<div class="col-sm-6 ticket-form">
			<%= form_with model: @ticket, url: admins_tickets_path do |f| %>
				<div class="form-group row">
			        <%= f.label :"チケット名", class: "col-6 col-form-label" %>
			        <div class="col-6">
		            	<%= f.text_field :name, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="form-group row">
			        <%= f.label :"価格", class: "col-6 col-form-label" %>
			        <div class="col-6">
		            	<%= f.text_field :price, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="actions">
			        <%= f.submit "登録する", class: "btn btn-success" %>
			    </div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<table class="table table-bordered table-title">
				<thead>
					<tr>
						<th>チケット一覧</th>
					</tr>
				</thead>
			</table>
			<table class="table table-bordered">
				<tbody>
					<% @tickets.each do |ticket| %>
						<tr>
							<td><%= ticket.id %></td>
							<td><%= ticket.name %></td>
							<td><%= ticket.price %>円</td>
							<td><%= link_to "編集する", edit_admins_ticket_path(ticket), class: "btn btn-outline-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>