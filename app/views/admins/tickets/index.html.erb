<div class="container">
	<div class="row">
		<div class="col-12 col-md-8 offset-md-2 ticket-form">
			<%= form_with model: @ticket, local: true, url: admins_tickets_path do |f| %>
				<div class="form-group row">
			        <%= f.label :"チケット名", class: "col-3 col-form-label" %>
			        <div class="col-6">
		            	<%= f.text_field :name, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="form-group row">
			        <%= f.label :"枚数", class: "col-3 col-form-label" %>
			        <div class="col-1">
						<%= f.select :quantity, options_for_select((1..99).to_a), class: "form-control" %>
					</div>
					<%= f.label :"価格(円)", class: "col-3 col-form-label" %>
			        <div class="col-2">
		            	<%= f.text_field :price, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="actions">
			        <%= f.submit "登録する", class: "btn btn-primary" %>
			    </div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<table class="col-12 col-md-8 offset-md-2 table table-bordered table-title">
			<thead>
				<tr>
					<th>チケット一覧</th>
				</tr>
			</thead>
		</table>
		<table class="col-12 col-md-8 offset-md-2 table table-bordered">
			<tbody>
				<% @tickets.each do |ticket| %>
					<tr>
						<td><%= ticket.id %></td>
						<td><%= ticket.name %></td>
						<td><%= ticket.quantity %>枚</td>
						<td><%= ticket.price %>円</td>
						<td><%= link_to "編集する", edit_admins_ticket_path(ticket), class: "btn btn-outline-success" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>