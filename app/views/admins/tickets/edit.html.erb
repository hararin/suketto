<div class="container">
	<div class="row">
		<div class="col-6 offset-3">
			<%= form_with model: @ticket, url: admins_ticket_path(@ticket) do |f| %>
			    <div class="form-group row">
			        <%= f.label :"名前", class: "col-4 col-form-label" %>
			        <div class="col-8">
		            	<%= f.text_field :name, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="form-group row">
	        		<%= f.label :"枚数(枚)", class: "col-4 col-form-label" %>
	      			<div class="col-8">
	      				<%= f.text_field :quantity, class: "form-control" %>
	      			</div>
	      		</div>
	        	<div class="form-group row">
	        		<%= f.label :"価格(円)", class: "col-4 col-form-label" %>
	      			<div class="col-8">
	      				<%= f.text_field :price, class: "form-control" %>
	      			</div>
	      		</div>
			    <div class="actions">
			        <%= f.submit "更新する", class: "btn btn-success" %>
			    </div>
			<% end %>
		</div>
	</div>
</div>