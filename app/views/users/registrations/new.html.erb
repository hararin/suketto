<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.text_field :name, :placeholder => "名前" %>
  </div>

  <div>
    <%= f.text_field :sex, :placeholder => "性別" %>
  </div>

  <div>
    <%= f.text_field :age, :placeholder => "年齢" %>
  </div>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード（６文字以上）" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード（確認用）" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
