<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>SIGN UP</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
      <%= render 'layouts/error_messages', model: @user %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3 signup-form">
      <%= form_for(resource, as: resource_name, local: true, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :"名前", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :"年齢", class: "col-3 col-form-label" %>
            <div class="col-3">
              <%= f.select :age, options_for_select((1..99).to_a), class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :"性別", class: "col-3 col-form-label" %>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-outline-danger">
                <%= f.radio_button :sex, "女性" %>女性
              </label>
              <label class="btn btn-outline-primary">
                <%= f.radio_button :sex, "男性" %>男性
              </label>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :"Eメール", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :"パスワード", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password, class: "form-control",autocomplete: "new-password", :placeholder => "６文字以上の半角英数字" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :"パスワード", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password_confirmation, class: "form-control",autocomplete: "new-password", :placeholder => "確認用" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-primary", style: "width: 100%;" %>
        </div>
      <% end %>
      <hr class="my-4">
      <p>ユーザーの方はこちら</p>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-sm btn-outline-success" %>
    </div>
  </div>
</div>
