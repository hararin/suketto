<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <h1>LOGIN</h1>
    </div>
  </div>
  <% if flash[:error] %>
    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
        <%= flash[:error] %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3 login-form">
      <%= form_for(resource, as: resource_name, local: true, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :"Eメール", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :"パスワード", class: "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password, class: "form-control",autocomplete: "new-password" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success", style: "width: 100%;" %>
        </div>
        <hr class="my-4">
        <p>ユーザー登録がまだの方はこちら</p>
        <%= link_to "ユーザー登録", new_user_registration_path, class: "btn btn-outline-primary", style: "width: 40%;" %>
      <% end %>
    </div>
  </div>
</div>




