<div class="container">
	<% if flash[:error] %>
		<div class="error-message">
			<i class="fa fa-exclamation-circle"></i><%= flash[:error] %>
		</div>
	<% end %>
	<div class="row">
		<div class="col-sm-10 offset-sm-1 form">
			<%= form_with model: @request, url: users_request_path(@request), class: "form-horizontal" do |f| %>
				<div class="form-group row">
					<%= f.label :"タイトル", class: "col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%= f.text_field :title, class: "form-control" %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :"詳細", class: "col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%= f.text_area :content, class: "form-control" %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :"日時", class: "col-sm-4 control-label" %>
					<div class="input-group col-sm-8" data-target-input="nearest">
						<%= f.text_field :datetime, id: "datetime",class: "form-control datepicker", data: { target: '#datetime'} %>
						<div class="input-group-append" data-target="#datetime" data-toggle="datetimepicker">
				        	<div class="input-group-text"><i class="fa fa-calendar"></i></div>
				   		</div>
					</div>
				</div>
			    <div class="form-group row">
			    	<%= f.label :"住所", class: "col-sm-4 control-label" %>
				    <div class="col-sm-8">
						<%= f.text_field :address, class: "form-control" %>
					</div>
			    </div>
			    <div class="form-group row">
			    	<%= f.label :"募集人数", class: "col-sm-4 control-label" %>
				    <div class="col-sm-3">
						<%= f.select :capacity, options_for_select((1..99).to_a), class: "form-control" %>
					</div>
					<div class="caution">
						<p>＊募集人数を変更した場合、変更前と変更後の差分のチケットが消費または返還されます。</p>
					</div>
			    </div>
				<div class="form-group row">
					<%= f.label :"募集締切日時", class: "col-sm-4 control-label" %>
					<div class="input-group col-sm-8" data-target-input="nearest">
						<%= f.text_field :deadline, id: "deadline",class: "form-control datepicker", data: { target: '#deadline'} %>
						<div class="input-group-append" data-target="#deadline" data-toggle="datetimepicker">
				        	<div class="input-group-text"><i class="fa fa-calendar"></i></div>
				   		</div>
					</div>
				</div>
			    <div class="form-group row">
			    	<%= f.label :"サムネイル", class: "col-sm-4 control-label" %>
				    <div class="col-sm-8">
						<%= f.attachment_field :image %>
					</div>
			    </div>
				<div>
					<%= f.submit "更新する", class: "btn btn-success", style: "margin-bottom: 20px;" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
    $(function () {
        $('#datetime').datetimepicker();
    });
    $(function () {
        $('#deadline').datetimepicker();
    });
</script>