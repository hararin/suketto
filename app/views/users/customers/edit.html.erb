<div class="container">
	<div class="row">
		<div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
			<%= form_with model: @user, url: users_customer_path(@user) do |f| %>
			    <div class="form-group row">
			        <%= f.label :"名前", class: "col-3 col-form-label" %>
			        <div class="col-9">
		            	<%= f.text_field :name, class: "form-control" %>
	            	</div>
			    </div>
        		<div class="form-group row">
          			<%= f.label :"年齢", class: "col-3 col-form-label" %>
          			<div class="col-3">
            			<%= f.text_field :age, class: "form-control" %>
          			</div>
          			<%= f.label :"性別", class: "col-3 col-form-label" %>
          			<div class="col-3">
            			<%= f.text_field :sex, class: "form-control" %>
          			</div>
        		</div>
        		<div class="form-group row">
        			<%= f.label :"プロフィール画像", class: "col-3 col-form-label" %>
        			<div class="col-9">
        				<%= f.attachment_field :image %>
        			</div>
        		</div>
			    <div class="actions">
			        <%= f.submit "更新する", class: "btn btn-success", style: "width: 100%;" %>
			    </div>
			<% end %>
		</div>
	</div>
</div>

